<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.plantro.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">

    <action
        android:id="@+id/action_profileFragment_to_settingFragment"
        app:destination="@id/navigation_profile" />

    </fragment>
    <fragment
        android:id="@+id/navigation_input"
        android:name="com.example.plantro.ui.input.InputFragment"
        android:label="@string/title_mendatang"
        tools:layout="@layout/fragment_input" />
    <fragment
        android:id="@+id/navigation_history"
        android:name="com.example.plantro.ui.favorite.HistoryFragment"
        android:label="FavoriteFragment"
        tools:layout="@layout/fragment_history"/>
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.plantro.ui.profile.ProfileFragment"
        android:label="SettingFragment"
        tools:layout="@layout/fragment_profile"/>


</navigation>